<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <h1>Add chat room</h1>

          <%= form_for @chat_room do |f| %>
            <div class="form-group">
              <%= f.label :topic %>
              <%= f.text_field :topic, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_field :description, autofocus: true, class: 'form-control' %>
            </div>

            <%= f.submit "Add!", class: 'btn btn-primary' %>
          <% end %>

          </div>
      </div>
    </div>
  </div>
</div>
